<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WertheApp.CN.DijkstraHelp">
    <ContentPage.Content>
         <ScrollView x:Name="scrollView" Margin="10">
            <StackLayout>
                <Label Text="Dijkstra" FontSize="{StaticResource _H1FontSize}"/>
                <Label Text="for finding the shortest paths in a graph. &#10;"
                       FontSize="{StaticResource _TextFontSize}"/>

                <Label Text="Settings" FontSize="{StaticResource _H2FontSize}"/>
                <Label Text="vertices"
                       FontAttributes="Bold"
                       FontSize="{StaticResource _TextFontSize}"/>
                <Label Text="The vertices are named U, V, W, X, Y, Z. U is the start vertex. &#10;"
                       FontSize="{StaticResource _TextFontSize}"/>

                <Label Text="edges"
                       FontAttributes="Bold"
                       FontSize="{StaticResource _TextFontSize}"/>
                <Label Text="The vertices are connected by undirected, weighted edges. The weights represent the distance between two vertices. You can change the weights by tapping on them. &#10;"
                       FontSize="{StaticResource _TextFontSize}"/>

                 <Label x:Name="last"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
